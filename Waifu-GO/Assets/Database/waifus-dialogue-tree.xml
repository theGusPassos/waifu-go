<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE scenes[
  <!ELEMENT scenes ANY>
  <!ELEMENT script ANY>
  <!ELEMENT dialogue ANY>
  <!ELEMENT girl-speak ANY>
  <!ELEMENT text ANY>
  <!ELEMENT option ANY>

  <!ATTLIST script waifu ID #REQUIRED>
  <!ATTLIST dialogue id CDATA #REQUIRED>
  <!ATTLIST option id CDATA #REQUIRED>
]>

<scenes>
  <script waifu="tsundere">
    <!--every node in the three is considered a dialogue,
    it has one line that the girl will say and x options to the
    player choose-->
    <dialogue id="entry">
      
      <!--what the girl will say. we may put nodes here 
      to define if she is angry, happy, sad, etc...-->
      <girl-speak>
        <text>Hi, Otaku. How are ya?</text>
      </girl-speak>
      
      <!--every option will have a text, and ID that defines 
      which dialogue will be called next, and one var to
      define if the player is saying something good or not-->
      <option id="1">
        <text>I am fine, how about your ass?</text>  
      </option>
    
      <option id="2">
        <text>DO YOU WANNA DATE ME????</text>
      </option>
    
    </dialogue>
  
    <dialogue id ="1">
      <girl-speak>
        <text>You will have to take a look by yourself, senpai...</text>
      </girl-speak>    
    
      <option id="end">
        <text>Okay</text>
      </option>
    
      <option id="end">
        <text>Are you serious? I wasn't...</text>
      </option>
    
      <option id="end">
        <text>?</text>
      </option>
    </dialogue>
  
    <dialogue id="2">
      
    </dialogue>
  </script>
</scenes>